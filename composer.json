{
    "name": "joshcirre/duo",
    "description": "Local-first IndexedDB syncing for Laravel and Livewire applications.",
    "keywords": [
        "php",
        "laravel",
        "livewire",
        "indexeddb",
        "local-first",
        "offline",
        "sync"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Josh Cirre",
            "email": "joshcirre@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/console": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0",
        "livewire/flux": "^1.0|^2.0",
        "livewire/livewire": "^3.0",
        "stillat/blade-parser": "^2.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.7",
        "laravel/pint": "^1.24.0",
        "orchestra/testbench": "^9.0",
        "peckphp/peck": "^0.1.3",
        "pestphp/pest": "^4.1.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-type-coverage": "^4.0.2",
        "phpstan/phpstan": "^2.1.26",
        "rector/rector": "^2.1.7",
        "symfony/var-dumper": "^7.3.3"
    },
    "autoload": {
        "psr-4": {
            "JoshCirre\\Duo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "JoshCirre\\Duo\\DuoServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "lint": "pint",
        "refactor": "rector",
        "test:type-coverage": "pest --type-coverage --min=90",
        "test:typos": "peck",
        "test:lint": "pint --test",
        "test:unit": "pest",
        "test:types": "phpstan",
        "test:refactor": "rector --dry-run",
        "test": [
            "@test:lint",
            "@test:typos",
            "@test:unit"
        ],
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi"
    }
}
